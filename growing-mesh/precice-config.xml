<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration experimental="true">
  <log>
    <sink
      filter="%Severity% >= debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>
  <profiling mode="all" />

  <data:scalar name="Data" />

  <mesh name="Left-Mesh" dimensions="3">
    <use-data name="Data" />
  </mesh>

  <mesh name="Right-Mesh" dimensions="3">
    <use-data name="Data" />
  </mesh>

  <participant name="Left">
    <provide-mesh name="Left-Mesh" />
    <write-data name="Data" mesh="Left-Mesh" />

  </participant>

  <participant name="Right">
    <provide-mesh name="Right-Mesh" />
    <read-data name="Data" mesh="Right-Mesh" />

    <receive-mesh name="Left-Mesh" from="Left" />
    <mapping:nearest-neighbor direction="read" from="Left-Mesh" to="Right-Mesh" constraint="consistent" />

    <export:vtk directory="out" />
  </participant>

  <m2n:sockets acceptor="Left" connector="Right" exchange-directory=".." />

  <coupling-scheme:parallel-explicit>
    <time-window-size value="1" />
    <max-time-windows value="12" />
    <participants first="Left" second="Right" />
    <exchange data="Data" mesh="Left-Mesh" from="Left" to="Right" />
  </coupling-scheme:parallel-explicit>
</precice-configuration>
